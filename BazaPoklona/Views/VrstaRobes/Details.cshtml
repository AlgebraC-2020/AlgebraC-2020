@model BazaPoklona.Models.VrstaRobe

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>VrstaRobe</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Naziv)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Naziv)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>

<span>Pokloni iz ove grupe:</span>
<div>
    <ul>
        @foreach (var item in Model.Poklons)
        {
            <li>@item.Naziv</li>
        }
    </ul>

</div>

<span>Trgovine gdje sa ovom vrstom robe</span>
<div>
    <ul>
        @foreach (var item in Model.Trgovinas)
        {
            <li>@item.NazivTrgovina</li>
        }
    </ul>

</div>

